{
  "name": "remix-app-template",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "tsc:server": "tsc --project ./tsconfig.server.json",
    "build": "remix vite:build && npm run tsc:server",
    "dev": "dotenv -e .env npm run dev:tsx",
    "dev:tsx": "tsx watch --exclude '.history/**/*' --exclude 'vite.config.ts.*' ./server/index.ts",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start:local": "NODE_ENV=production dotenv -e .env node ./server/index.js",
    "start:dev": "NODE_ENV=production dotenv -e dev.env node ./server/index.js",
    "start": "NODE_ENV=production node ./server/index.js",
    "typecheck": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@remix-run/express": "^2.13.1",
    "@remix-run/node": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@remix-run/serve": "^2.13.1",
    "compression": "^1.7.5",
    "dompurify": "^3.1.7",
    "express": "^4.21.1",
    "isbot": "^5.1.17",
    "jsdom": "^25.0.1",
    "morgan": "^1.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix-utils": "^7.7.0",
    "uuid": "^11.0.2",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.13.1",
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/compression": "^1.7.5",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.0",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": "22.x",
    "npm": "10.x"
  }
}
