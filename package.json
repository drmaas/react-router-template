{
  "name": "remix-app-template",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "tsc:server": "tsc --project ./tsconfig.server.json",
    "build": "remix vite:build && npm run tsc:server",
    "dev": "dotenv -e .env npm run dev:tsx",
    "dev:tsx": "tsx watch --exclude '.history/**/*' --exclude 'vite.config.ts.*' ./server/index.ts",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start:local": "NODE_ENV=production dotenv -e .env node ./server/index.js",
    "start:dev": "NODE_ENV=production dotenv -e dev.env node ./server/index.js",
    "start": "NODE_ENV=production node ./server/index.js",
    "typecheck": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@remix-run/express": "^2.16.6",
    "@remix-run/node": "^2.16.6",
    "@remix-run/react": "^2.16.6",
    "@remix-run/serve": "^2.16.6",
    "@tailwindcss/postcss": "^4.1.7",
    "compression": "^1.8.0",
    "dompurify": "^3.2.5",
    "isbot": "^5.1.28",
    "jsdom": "^26.1.0",
    "morgan": "^1.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.16.6",
    "@swc/core": "^1.11.24",
    "@swc/jest": "^0.2.38",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/compression": "^1.7.5",
    "@types/dompurify": "^3.2.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.26.0",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jiti": "^2.4.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": "22.x",
    "npm": "10.x"
  }
}
